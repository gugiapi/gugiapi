	response (200 OK or 502) {"id": "page_yahoo_yahoo.com/page"}

recommend_bot:
	request {"id": "page_yahoo_yahoo.com/page"}
	response {"name": "kayak", "photo": "photo.com/test.jpg", "token": "gsdfjglk5345", "template": "do you want an hotel in rome?"}

